<section id="form">
  <h2 class="mt-3">Edit Data</h2>
  <div class="row">
    <div class="col-md-6">
      <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(err => { %>
          <li><%= err.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>
      <form action="/contact?_method=PUT" method="post">
        <input type="hidden" name="_id" value="<%= contact._id %>" />
        <div class="mb-3">
          <label for="nama" class="form-label">Nama Lengkap</label>
          <input type="text" class="form-control" id="nama" required autofocus name="nama" value="<%= contact.nama %>" />
        </div>
        <input type="hidden" name="oldName" value="<%= contact.oldName || contact.nama %>" />
        <div class="mb-3">
          <label for="Email" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" required name="email" value="<%= contact.email %>" />
        </div>
        <div class="mb-3">
          <label for="No Hp" class="form-label">No Hp</label>
          <input type="text" class="form-control" id="noHp" required name="nohp" value="<%= contact.nohp %>" />
        </div>
        <button type="submit" class="btn btn-warning">Update contact</button>
      </form>
    </div>
  </div>
</section>
